<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.stx.xhb.xbanner.XBanner
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/details_banner_1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:AutoPlayTime="3000"
            app:pointsPosition="CENTER"
            app:tipTextSize="12sp"
            app:isShowNumberIndicator="false"
            app:isShowIndicatorOnlyOne="true"
            app:pageChangeDuration="800"/>

        <TextView
            android:background="#E6E6E6"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TextView
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="14dp"
            android:textColor="#1a1a1a"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="4G套餐"
            android:id="@+id/tv_phone_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="14dp"
            android:text="90每月"
            android:textSize="14dp"
            android:textColor="#7f7f7f"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="14dp"
            android:id="@+id/tv_phone_details_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_marginTop="20dp"
                android:textColor="#35bb8a"
                android:textSize="16dp"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="14dp"
                android:id="@+id/tv_phone_details_money"
                android:text="¥  25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_phone_detail_icon"
                    android:text="@string/love"
                    android:textColor="#FE4241"
                    android:textSize="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView

                    android:textColor="#35bb8a"
                    android:id="@+id/tv_phone_details_love"
                    android:text="+0.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>
