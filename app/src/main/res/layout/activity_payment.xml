<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tv_payment_back"
            android:layout_marginLeft="14dp"
            android:src="@mipmap/fan_hui1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18dp"
            android:textColor="#1a1a1a"
            android:gravity="center"
            android:text="下单"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/line"
        android:layout_below="@+id/rl_layout"
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_above="@+id/line1_payment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ListView
            android:id="@+id/lv_payment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
        <TextView
            android:background="#E6E6E6"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/line3_payment"
        android:background="#E6E6E6"
        android:layout_above="@+id/rl_payment_time"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <RelativeLayout
        android:background="#fff"
        android:layout_above="@+id/line1_payment"
        android:id="@+id/rl_payment_address"
        android:layout_width="match_parent"
        android:layout_height="41.5dp">
        <TextView
            android:textSize="16dp"
            android:layout_marginLeft="14dp"
            android:text="收货地址"
            android:gravity="center"
            android:textColor="#1a1a1a"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_marginRight="14dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:src="@mipmap/jian_tou"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_payment_address"
            android:layout_marginRight="32dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="#000"
            android:maxEms="9"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="18dp"
            android:text="地址"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/line1_payment"
        android:background="#E6E6E6"
        android:layout_above="@+id/rl_payment_time"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <RelativeLayout
        android:background="#fff"
        android:layout_above="@+id/line2"
        android:id="@+id/rl_payment_time"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textSize="16dp"
            android:layout_marginLeft="14dp"
            android:text="配送时间"
            android:gravity="center"
            android:textColor="#1a1a1a"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp" />

        <ImageView
            android:layout_marginRight="14dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:src="@mipmap/jian_tou"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_payment_time"
            android:layout_marginRight="32dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="#1a1a1a"
            android:textSize="16dp"
            android:text="11:00"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/line2"
        android:background="#E6E6E6"
        android:layout_above="@+id/rl_payment_layout"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <RelativeLayout
        android:id="@+id/rl_payment_layout"
        android:background="#fff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <!--<TextView-->
        <!--android:id="@+id/tv_payment_all_circle"-->
        <!--android:textSize="20dp"-->
        <!--android:layout_marginLeft="14dp"-->
        <!--android:text="@string/circle"-->
        <!--android:gravity="center"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent" />-->
        <!--<TextView-->
        <!--android:layout_toRightOf="@+id/tv_payment_all_circle"-->
        <!--android:gravity="center"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:text="全选"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent" />-->

        <TextView
            android:id="@+id/tv_payment_order"
            android:gravity="center"
            android:text="下单"
            android:background="#35bb8a"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
            android:layout_width="124dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/text1"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="桶"
            android:layout_toLeftOf="@+id/tv_payment_order"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <TextView
            android:id="@+id/tv_payment_total_num"
            android:text="1"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_payment_order_name"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_payment_total_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:text="合计"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_payment_order_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

</RelativeLayout>