    <TextView
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <RelativeLayout
        android:id="@+id/rl_pop_time"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_marginLeft="14dp"
            android:text="时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_pop_time"
            android:layout_marginRight="14dp"
            android:layout_alignParentRight="true"
            android:text="11:30   >"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_marginLeft="14dp"
            android:text="数量"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView

            android:id="@+id/img_pop_add"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="14dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_toLeftOf="@id/img_pop_add"
            android:id="@+id/tv_pop_num"
            android:text="1"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_toLeftOf="@+id/tv_pop_num"
            android:id="@+id/img_pop_subtract"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <TextView
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="1px" />


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_pop_payment"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#35bb8a"
            android:textColor="#fff"
            android:gravity="center"
            android:text="确定付款"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>