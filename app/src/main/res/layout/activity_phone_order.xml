<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_layout_phone_order"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_phone_order_back"
            android:layout_marginLeft="14dp"
            android:textSize="18dp"
            android:text="@string/back"
            android:textColor="#7F7F7F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18dp"
            android:textColor="#1a1a1a"
            android:gravity="center"
            android:text="提交订单"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:background="#35bb8a"
        android:orientation="vertical"
        android:id="@+id/ll_combo_order_detail"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_layout_phone_order"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_phone_order_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:text="商品名称:"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_phone_order_phone"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:layout_marginLeft="30dp"
            android:text="手机号:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_phone_order_buy_phone"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:layout_marginLeft="30dp"
            android:text="所选购手机号码:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_phone_order_money"
            android:layout_marginTop="5dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="30dp"
            android:textColor="#fff"
            android:text="价格:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_phone_order_name"
            android:layout_marginTop="5dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="30dp"
            android:textColor="#fff"
            android:text="收件人:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <RelativeLayout
            android:id="@+id/rl_phone_order_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_phone_order_address"
                android:textColor="#fff"
                android:maxEms="15"
                android:layout_marginTop="10dp"
                android:text="收货地址:xx省xx市xx区xx路xx号xx楼xx室"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="20dp"
                android:textColor="#fff"
                android:layout_marginTop="8dp"
                android:layout_marginRight="14dp"
                android:layout_alignParentRight="true"
                android:text=">"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <TextView
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_commit_order_phone"
        android:background="#35bb8a"
        android:textColor="#fff"
        android:gravity="center"
        android:text="提交订单"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</RelativeLayout>